<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "sample_app", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only"><%= t "header.toggle_navigation" %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("header.help"), help_path %></li>
        <li><%= link_to t("header.english"), locale:"en" %></li>
        <li><%= link_to t("header.vietnamese"), locale:"vi" %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t "header.account" %> <b class="caret"></b></a>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to t("header.profile"), current_user %></li>
                <li><%= link_to t("header.settings"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("header.logout"), logout_path, data: { "turbo-method": :delete } %>
                </li>
              </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
        </ul>
      </ul>
    </nav>
  </div>
</header>
