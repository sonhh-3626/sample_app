<% provide(:title, t("session.login.title")) %>
<h1><%= t("session.login.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.submit "Log in", class: "btn btn-primary" %> <% end %>

    <p>Neu user? <%= link_to t("session.login.sign_up_now"), signup_path %> </p>
  </div>
</div>
