<%= form_with(model: @micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.form.content_placeholder") %>
  </div>
  <%= f.submit t("microposts.form.post_btn"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: Settings.ACCEPTED_FORMAT_IMAGE, id: "micropost_image" %>
  </span>
<% end %>
