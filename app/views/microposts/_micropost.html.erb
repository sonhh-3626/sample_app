<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar_size_50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <% if micropost.image.attached? %>
    <%= image_tag micropost.image.variant(:display) %>
  <% end %>
  <span class="timestamp">
    <%= t "microposts.posted_ago", time: time_ago_in_words(micropost.created_at) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts.form.delete_btn"), micropost, data: { "turbo-method": :delete, "turbo-confirm": t("microposts.form.you_sure") } %>
    <% end %>
  </span>
</li>
