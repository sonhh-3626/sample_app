<% provide(:title, t("session.forgot_password.title")) %>
<h1><%= t "session.forgot_password.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("session.forgot_password.submit_btn"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
